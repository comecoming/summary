$ mkdir srv
roscp rospy_tutorials AddTwoInts.srv srv/AddTwoInts.srv

CMakeLists.txt
find_package(catkin REQUIRED COMPONENTS
  roscpp
  rospy
  std_msgs
  message_generation)
add_service_files(
  FILES
  AddTwoInts.srv
)








